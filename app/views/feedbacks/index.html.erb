<p style="color: green"><%= notice %></p>

<h1>Feedbacks</h1>



<ul>
  <% months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %>
  <% months.each_with_index do |month, index| %>
    <% feedbacks = @feedbacks.select { |feedback| feedback.month == month } %>
    <% if feedbacks.any? %>
      <li>
        <time datetime="<%= Date.current.strftime("%Y-%m-#{index + 1}") %>"><%= month %>, <%= Date.current.strftime("%Y") %></time>
        <% feedbacks.each do |feedback| %>
          <%= feedback.title %>
        <% end %>
      </li>
    <% end %>
  <% end %>

  <%= link_to new_feedback_path, class:"newfeedback" do %>
  <img src = "assets/plus.png" width="30px", height="40px" >
<% end %>


</ul>
